<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Submission">

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="128dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="256dp"
        android:layout_marginBottom="480dp"
        android:text="EMail Id" />

    <TextView
        android:id="@+id/tv_Email"
        android:layout_width="195dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="492dp"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tvUniversity"
        android:layout_width="134dp"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="252dp"
        android:layout_marginBottom="427dp"
        android:text="University Roll no" />

    <EditText
        android:id="@+id/etRoll"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="425dp"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/tv_chooose"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="265dp"
        android:layout_marginBottom="364dp"
        android:text="CHoosed SUbjects" />

    <TextView
        android:id="@+id/tv_Subjects"
        android:layout_width="168dp"
        android:layout_height="85dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="316dp" />

    <Button
        android:id="@+id/Submission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="159dp"
        android:layout_marginBottom="71dp"
        android:text="Submission" />

</RelativeLayout>