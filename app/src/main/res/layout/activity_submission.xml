<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Submission">

    <TextView
        android:id="@+id/Course_name"
        android:layout_width="128dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="254dp"
        android:layout_marginBottom="551dp"
        android:text="Course" />

    <TextView
        android:id="@+id/Course"
        android:layout_width="128dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="256dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="553dp"
        android:text="MCA" />

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="128dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="256dp"
        android:layout_marginBottom="480dp"
        android:text="EMail Id" />

    <TextView
        android:id="@+id/tv_Email"
        android:layout_width="128dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="484dp"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tvUniversity"
        android:layout_width="128dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="252dp"
        android:layout_marginBottom="427dp"
        android:text="University Roll no" />

    <EditText
        android:id="@+id/etRoll"
        android:layout_width="128dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="430dp"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/tv_chooose"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="254dp"
        android:layout_marginBottom="364dp"
        android:text="Choosed Subjects" />

    <TextView
        android:id="@+id/tv_Subjects"
        android:layout_width="123dp"
        android:layout_height="82dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="323dp" />

    <Button
        android:id="@+id/Submission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="146dp"
        android:layout_marginEnd="159dp"
        android:layout_marginBottom="70dp"
        android:text="Submission" />

</RelativeLayout>